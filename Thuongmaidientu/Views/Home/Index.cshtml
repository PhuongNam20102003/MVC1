@{
    ViewData["Title"] = "Trang Chủ";
    ViewData["MetaDescription"] = "N&NShop cung cấp đa dạng sản phẩm tươi ngon, chất lượng cao với giá cả hợp lý. Khám phá ngay các sản phẩm nổi bật và ưu đãi hấp dẫn!";
}

<!-- Banner trang chủ -->
<div class="container-fluid p-0 mb-5">
    <div class="position-relative">
        <img src="~/img/banner.jpg" class="img-fluid w-100" alt="Banner N&NShop" style="max-height: 500px; object-fit: cover;">
        <div class="position-absolute top-50 start-50 translate-middle text-center text-white">
            <h1 class="display-4 fw-bold">Chào mừng đến với N&NShop - Sản phẩm tươi ngon, chất lượng cao</h1>
            <p class="lead">Khám phá các sản phẩm nổi bật và ưu đãi hấp dẫn</p>
            <a class="btn btn-primary btn-lg" href="@Url.Action("Index", "Hanghoa")">Mua Ngay</a>
        </div>
    </div>
</div>

<!-- Sản phẩm nổi bật -->
<div class="container py-5">
    <h2 class="mb-4">Sản phẩm nổi bật</h2>
    <div class="row g-4">
        <div class="col-md-3">
            <div class="card h-100">
                <img src="~/img/featured1.jpg" class="card-img-top" alt="Sản phẩm 1">
                <div class="card-body text-center">
                    <h3 class="card-title">Sản phẩm 1</h3>
                    <p class="text-primary fw-bold">2.99 $</p>
                    <a class="btn btn-outline-primary btn-sm" href="@Url.Action("Detail", "Hanghoa", new { id = 1 })">Xem chi tiết</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card h-100">
                <img src="~/img/featured2.jpg" class="card-img-top" alt="Sản phẩm 2">
                <div class="card-body text-center">
                    <h3 class="card-title">Sản phẩm 2</h3>
                    <p class="text-primary fw-bold">3.49 $</p>
                    <a class="btn btn-outline-primary btn-sm" href="@Url.Action("Detail", "Hanghoa", new { id = 2 })">Xem chi tiết</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Giới thiệu cửa hàng -->
<div class="container py-5">
    <div class="row align-items-center">
        <div class="col-md-6">
            <img src="~/img/about-us.jpg" class="img-fluid rounded" alt="Về chúng tôi">
        </div>
        <div class="col-md-6">
            <h2>Về N&NShop</h2>
            <p>Chúng tôi cung cấp các sản phẩm tươi ngon, chất lượng cao với giá cả hợp lý. Cam kết mang đến trải nghiệm mua sắm tuyệt vời cho khách hàng.</p>
            <a class="btn btn-primary" href="@Url.Action("Index", "Hanghoa")">Khám phá sản phẩm</a>
        </div>
    </div>
</div>
