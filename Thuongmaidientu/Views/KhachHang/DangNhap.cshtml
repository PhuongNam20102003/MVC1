@model Thuongmaidientu.ViewModels.LoginVM
@{
    ViewData["Title"] = "Đăng Nhập";
}

<div class="container py-5" style="min-height: 80vh; background: linear-gradient(to right, #eef2f3, #ffffff);">
    <div class="row justify-content-center align-items-center" style="min-height: 100%;">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-4 p-5" style="background: #ffffff;">
                <div class="text-center mb-4">
                    <h2 class="fw-bold text-primary">Đăng Nhập Khách Hàng</h2>
                    <p class="text-muted">Nhập thông tin để truy cập hệ thống</p>
                </div>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form asp-controller="KhachHang" asp-action="DangNhap" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>

                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label fw-semibold">Tên đăng nhập</label>
                        <div class="input-group">
                            <span class="input-group-text bg-primary text-white"><i class="bi bi-person-fill"></i></span>
                            <input asp-for="UserName" class="form-control form-control-lg" placeholder="Nhập tên đăng nhập..." />
                        </div>
                        <span asp-validation-for="UserName" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label fw-semibold">Mật khẩu</label>
                        <div class="input-group">
                            <span class="input-group-text bg-primary text-white"><i class="bi bi-lock-fill"></i></span>
                            <input asp-for="Password" type="password" id="passwordInputKh" class="form-control form-control-lg" placeholder="Nhập mật khẩu..." />
                            <button type="button" class="btn btn-outline-secondary" id="togglePasswordKh">
                                <i class="bi bi-eye-fill"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2 fw-bold rounded-3 mt-3">Đăng Nhập</button>

                    <div class="mt-2 text-center">
                        <a asp-controller="KhachHang" asp-action="QuenMatKhau" class="text-danger text-decoration-none small fw-semibold">
                            Quên mật khẩu?
                        </a>
                    </div>

                    <div class="mt-3 text-center small text-muted">
                        Chưa có tài khoản?
                        <a asp-controller="KhachHang" asp-action="DangKy" class="text-primary fw-bold text-decoration-none">Đăng ký ngay</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    const togglePasswordKh = document.getElementById("togglePasswordKh");
    const passwordFieldKh = document.getElementById("passwordInputKh");

    togglePasswordKh.addEventListener("click", function () {
        const type = passwordFieldKh.type === "password" ? "text" : "password";
        passwordFieldKh.type = type;
        this.innerHTML = type === "password" ? '<i class="bi bi-eye-fill"></i>' : '<i class="bi bi-eye-slash-fill"></i>';
    });
</script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
