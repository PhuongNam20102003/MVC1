@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-center bg-primary text-white">
                    <h3>Thông tin cá nhân</h3>
                </div>
                <div class="card-body">
                    <p><strong>Xin chào:</strong> @Context.User.Identity.Name</p>
                    <p><strong>Email:</strong> @User.Claims.FirstOrDefault(c => c.Type == "email")?.Value ?? "Chưa cập nhật"</p>
                    <p><strong>Ngày tham gia:</strong> @User.Claims.FirstOrDefault(c => c.Type == "joinDate")?.Value ?? "Chưa cập nhật"</p>

                    <div class="d-grid gap-2 mt-4">
                        <a class="btn btn-outline-primary" asp-action="EditProfile">Chỉnh sửa thông tin</a>
                        <a class="btn btn-outline-warning" asp-action="ChangePassword">Đổi mật khẩu</a>
                        <a class="btn btn-danger" asp-action="DangXuat">Đăng xuất</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
