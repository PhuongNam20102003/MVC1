<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - N&NShop</title>
    <link rel="canonical" href="https://www.nnshop.com/" />
    <!-- Meta description -->
    <meta name="description" content="N&NShop cung cấp đa dạng sản phẩm tươi ngon, chất lượng cao với giá cả hợp lý. Khám phá ngay các sản phẩm nổi bật và ưu đãi hấp dẫn!">
    <meta name="keywords" content="">
    <meta property="og:title" content="@ViewData["Title"] - N&NShop" />
    <meta property="og:description" content="@ViewData["MetaDescription"]" />
    <meta property="og:image" content="https://www.nnshop.com/img/banner.jpg" />
    <meta property="og:url" content="https://www.nnshop.com/" />
    <meta name="twitter:card" content="summary_large_image" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap" rel="stylesheet">

    <!-- Icon Fonts -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Library CSS -->
    <link href="~/lib/lightbox/css/lightbox.min.css" rel="stylesheet" />
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />

    <!-- Bootstrap & Custom CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />

    <!-- Schema.org JSON-LD -->
    @{
        var schemaJson = @"{
    ""@context"": ""https://schema.org"",
    ""@type"": ""Store"",
    ""name"": ""N&NShop"",
    ""image"": ""https://www.nnshop.com/img/banner.jpg"",
    ""url"": ""https://www.nnshop.com/"",
    ""telephone"": ""+012345678910"",
    ""address"": {
    ""@type"": ""PostalAddress"",
    ""streetAddress"": ""45 Nguyễn Hữu Thọ, P. Tân Hưng"",
    ""addressLocality"": ""TP.HCM"",
    ""addressCountry"": ""VN""
    },
    ""sameAs"": [
    ""https://www.facebook.com/nnshop"",
    ""https://twitter.com/nnshop"",
    ""https://www.instagram.com/nnshop""
    ]
    }";
    }
    <script type="application/ld+json">
        @Html.Raw(schemaJson)
    </script>

    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-V34RY0PZFW"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'G-V34RY0PZFW');
    </script>

    <link rel="icon" type="image/png" href="@Url.Content("~/favicon-96x96.png")" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="@Url.Content("~/favicon.svg")" />
    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")" />
    <link rel="apple-touch-icon" sizes="180x180" href="@Url.Content("~/apple-touch-icon.png")" />
    <link rel="manifest" href="@Url.Content("~/site.webmanifest")" />

    <!-- Facebook Messenger Chat Plugin -->
    <div id="fb-root"></div>
    <div id="fb-customer-chat" class="fb-customerchat"></div>

    <a href="https://m.me/954850664368521" target="_blank">Chat với chúng tôi trên Messenger</a>
    <!-- Load SDK Facebook -->
    <script>
        window.fbAsyncInit = function() {
          FB.init({
            xfbml            : true,
            version          : 'v17.0'
          });
        };

        (function(d, s, id) {
          var js, fjs = d.getElementsByTagName(s)[0];
          if (d.getElementById(id)) return;
          js = d.createElement(s); js.id = id;
          js.src = "https://connect.facebook.net/vi_VN/sdk/xfbml.customerchat.js";
          fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>



    <!-- Head section từ view (SEO, OG, canonical) -->
    @RenderSection("Head", required: false)

    @RenderSection("Styles", required: false)
</head>
<body>
    <div id="fb-root"></div>
    <script async defer crossorigin="anonymous"
            src="https://connect.facebook.net/vi_VN/sdk/xfbml.customerchat.js"></script>
    <!-- Spinner -->
    <div id="spinner" class="show w-100 vh-100 bg-white position-fixed top-50 start-50 translate-middle d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-primary" role="status"></div>
    </div>

    <!-- Topbar -->
    <div class="container-fluid fixed-top">
        <div class="container topbar bg-primary d-none d-lg-block">
            <div class="d-flex justify-content-between">
                <div class="top-info ps-2">
                    <small class="me-3"><i class="fas fa-map-marker-alt me-2 text-secondary"></i><a href="#" class="text-white">45 Nguyễn Hữu Thọ, P. Tân Hưng, TP.HCM</a></small>
                    <small class="me-3"><i class="fas fa-envelope me-2 text-secondary"></i><a href="mailto:huynhphuongnam722@gmail.com" class="text-white">huynhphuongnam722@gmail.com</a></small>
                </div>
                <div class="top-link pe-2">
                    <a href="#" class="text-white"><small class="mx-2">Chính sách bảo mật</small>/</a>
                    <a href="#" class="text-white"><small class="mx-2">Điều khoản sử dụng</small>/</a>
                    <a href="#" class="text-white"><small class="ms-2">Chính sách hoàn trả</small></a>
                </div>
            </div>
        </div>

        <!-- Navbar -->
        <div class="container px-0">
            <nav class="navbar navbar-light bg-white navbar-expand-xl">
                <a asp-controller="Home" asp-action="Index" class="navbar-brand">
                    <h1 class="text-primary display-6">N&NShop</h1>
                </a>
                <button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="fa fa-bars text-primary"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav mx-auto">
                        <a asp-controller="Home" asp-action="Index" class="nav-item nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "active text-primary" : "")">Trang Chủ</a>
                        <a asp-controller="HangHoa" asp-action="Index" class="nav-item nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "HangHoa" ? "active text-primary" : "")">Cửa Hàng</a>
                        <a asp-controller="Cart" asp-action="Index" class="nav-item nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Cart" ? "active text-primary" : "")">Giỏ Hàng</a>
                        <a asp-controller="Cart" asp-action="Checkout" class="nav-item nav-link">Thanh Toán</a>
                        <a asp-controller="Contact" asp-action="Index" class="nav-item nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Contact" ? "active text-primary" : "")">Liên Hệ</a>
                    </div>
                    <div class="d-flex m-3 me-0">
                        <button class="btn-search btn border border-secondary btn-md-square rounded-circle bg-white me-4" data-bs-toggle="modal" data-bs-target="#searchModal">
                            <i class="fas fa-search text-primary"></i>
                        </button>
                        @await Component.InvokeAsync("Cart")
                        <a asp-action="DangNhap" asp-controller="KhachHang" class="my-auto" title="Đăng Nhập">
                            <i class="fas fa-user fa-2x"></i>
                        </a>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    <!-- Search Modal -->
    <div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="searchModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-fullscreen">
            <div class="modal-content rounded-0">
                <div class="modal-header">
                    <h5 class="modal-title" id="searchModalLabel">Tìm kiếm từ khóa</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                </div>
                <div class="modal-body d-flex align-items-center">
                    <div class="input-group w-75 mx-auto d-flex">
                        <input id="searchText" type="search" class="form-control p-3" placeholder="Nhập từ khóa..." />
                        <span id="searchButton" class="input-group-text p-3"><i class="fa fa-search"></i></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <main style="min-height:400px;" class="hero-header">
        @RenderBody()
    </main>

    @await Html.PartialAsync("_Footer")

    <a href="#" class="btn btn-primary border-3 border-primary rounded-circle back-to-top">
        <i class="fa fa-arrow-up"></i>
    </a>

    <div class="fb-customerchat"
         attribution="setup_tool"
         page_id="954850664368521"
         theme_color="#0084ff"
         logged_in_greeting="Xin chào! Chúng tôi có thể giúp gì cho bạn?"
         logged_out_greeting="Xin chào! Chúng tôi có thể giúp gì cho bạn?">
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/lightbox/js/lightbox.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/js/main.js"></script>

    @RenderSection("Scripts", required: false)

    <script>
        $(document).ready(function(){
            $("#searchButton").click(function(){
                let query = $("#searchText").val();
                if(query.trim() !== ""){
                    window.location.href = '/HangHoa/Search?query=' + encodeURIComponent(query);
                }
            });
        });
    </script>
    <!--Start of Tawk.to Script-->
    <script type="text/javascript">
        var Tawk_API=Tawk_API||{}, Tawk_LoadStart=new Date();
        (function(){
        var s1=document.createElement("script"),s0=document.getElementsByTagName("script")[0];
        s1.async=true;
        s1.src='https://embed.tawk.to/6939aba43b580319805b6ea5/1jc4kcusb';
        s1.charset='UTF-8';
        s1.setAttribute('crossorigin','*');
        s0.parentNode.insertBefore(s1,s0);
        })();
    </script>
    <!--End of Tawk.to Script-->
</body>
</html>
