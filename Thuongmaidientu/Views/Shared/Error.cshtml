@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container py-5 text-center">
    <h1 class="display-4 text-danger mb-3">Oops! Something went wrong.</h1>
    <p class="lead mb-4">An error occurred while processing your request.</p>

    @if (Model.ShowRequestId)
    {
        <p>
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
        <i class="fas fa-home me-2"></i>Back to Home
    </a>

    <hr class="my-4">

    <h5 class="text-secondary">Development Mode Info</h5>
    <p class="text-muted">
        Swapping to <strong>Development</strong> environment will display more detailed information about the error.
    </p>
    <p class="text-muted">
        For local debugging, set <code>ASPNETCORE_ENVIRONMENT</code> to <strong>Development</strong> and restart the app.
    </p>
</div>
