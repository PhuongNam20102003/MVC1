@{
    ViewData["Title"] = "Đặt Hàng Thành Công";
}

<div class="container py-5 text-center">
    <div class="card shadow-sm p-5">
        <div class="mb-4">
            <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
        </div>
        <h1 class="mb-3">Đặt Hàng Thành Công!</h1>
        <p class="mb-4">Cảm ơn bạn đã đặt hàng tại cửa hàng của chúng tôi. Đơn hàng của bạn đang được xử lý.</p>
        @* Nếu có mã đơn hàng, hiển thị ở đây *@
        @if (ViewBag.OrderId != null)
        {
            <p>Mã đơn hàng của bạn: <strong>@ViewBag.OrderId</strong></p>
        }
        <a class="btn btn-primary mt-3" asp-controller="Hanghoa" asp-action="Index">Tiếp Tục Mua Sắm</a>
        <a class="btn btn-outline-secondary mt-3" asp-controller="Cart" asp-action="Index">Xem Giỏ Hàng</a>
    </div>
</div>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
}
