@model Thuongmaidientu.ViewModels.ChiTietHanghoaVM
@using Microsoft.AspNetCore.Http.Extensions
@{
    ViewData["Title"] = @Model.TenHh + " | My Shop";
    Layout = "_LayoutCustomer";

    // Slug cho URL
    var slug = Thuongmaidientu.Controllers.HanghoaController.ToSlug(Model.TenHh);

    // URL hiện tại và hình đầy đủ
    var currentUrl = $"{Context.Request.Scheme}://{Context.Request.Host}{Context.Request.Path}{Context.Request.QueryString}";
    var imageUrl = $"{Context.Request.Scheme}://{Context.Request.Host}/Hinh/HangHoa/{Model.Hinh}";
}


@section Head {
    <meta name="description" content="@Model.MoTa" />
    <meta property="og:title" content="@Model.TenHh" />
    <meta property="og:description" content="@Model.MoTa" />
    <meta property="og:image" content="@imageUrl" />
    <meta property="og:url" content="@currentUrl" />
    <meta property="og:type" content="product" />
    <link rel="canonical" href="@currentUrl" />
}

<style>
    /* Ẩn mũi tên tăng/giảm trong input number */
    .no-arrow::-webkit-inner-spin-button,
    .no-arrow::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    .no-arrow {
        -moz-appearance: textfield;
    }
</style>

<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Chi tiết sản phẩm</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Hanghoa")">Hàng hóa</a></li>
        <li class="breadcrumb-item active text-white">@Model.TenHh</li>
    </ol>
</div>

<div class="container py-5">
    <div class="row g-4">
        <!-- Hình sản phẩm -->
        <div class="col-lg-6">
            <div class="border rounded p-3 text-center">
                <img src="~/Hinh/HangHoa/@Model.Hinh" class="img-fluid rounded" alt="@Model.TenHh" />
            </div>
        </div>

        <!-- Thông tin sản phẩm -->
        <div class="col-lg-6">
            <h2 class="fw-bold">@Model.TenHh</h2>
            <p>Loại sản phẩm: <b>@Model.TenLoai</b></p>
            <h4 class="text-primary fw-bold">@Model.DonGia.ToString("N0") $</h4>
            <p>@Model.MoTa</p>
            <p>
                Tình trạng:
                @if (Model.SoLuongTon > 0)
                {
                    <span class="text-success fw-bold">Còn hàng (@Model.SoLuongTon)</span>
                }
                else
                {
                    <span class="text-danger fw-bold">Hết hàng</span>
                }
            </p>

            <!-- AddToAny BEGIN -->
            <div class="a2a_kit a2a_kit_size_32 a2a_default_style">
                <a class="a2a_button_facebook"></a>
                <a class="a2a_button_whatsapp"></a>
                <a class="a2a_button_copy_link"></a>
            </div>
            <script async src="https://static.addtoany.com/menu/page.js"></script>
            <!-- AddToAny END -->
            <!-- Form thêm vào giỏ hàng -->
            <form asp-action="AddToCart" asp-controller="Cart" method="post" class="mt-3">
                <input type="hidden" name="id" value="@Model.MaHh" />
                <input type="hidden" name="slug" value="@slug" />

                <div class="d-flex align-items-center gap-2 mb-3" style="max-width: 200px;">
                    <button type="button" class="btn btn-outline-secondary btn-sm" id="btnMinus">-</button>
                    <input type="number" id="quantityInput" name="quantity" value="1" min="1" class="form-control text-center no-arrow" />
                    <button type="button" class="btn btn-outline-secondary btn-sm" id="btnPlus">+</button>
                </div>

                <button type="submit" class="btn btn-primary rounded-pill px-4 py-2">
                    <i class="fa fa-shopping-bag me-2"></i>Thêm vào giỏ hàng
                </button>
                <a href="@Url.Action("Index", "Hanghoa")" class="btn btn-secondary rounded-pill px-4 py-2 ms-2">Quay lại</a>
            </form>

        </div>

        <!-- Tabs chi tiết & đánh giá -->
        <div class="col-12 mt-4">
            <ul class="nav nav-tabs" id="productTab">
                <li class="nav-item">
                    <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#details">Thông tin chi tiết</button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#review">Đánh giá</button>
                </li>
            </ul>

            <div class="tab-content p-3 border border-top-0">
                <div class="tab-pane fade show active" id="details">
                    @Model.ChiTiet
                </div>
                <div class="tab-pane fade" id="review">
                    <p>Chưa có đánh giá nào.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const input = document.getElementById("quantityInput");
            const btnPlus = document.getElementById("btnPlus");
            const btnMinus = document.getElementById("btnMinus");

            btnPlus.addEventListener("click", () => {
                let val = Number(input.value);
                input.value = isNaN(val) ? 1 : val + 1;
            });

            btnMinus.addEventListener("click", () => {
                let val = Number(input.value);
                input.value = isNaN(val) || val <= 1 ? 1 : val - 1;
            });

            input.addEventListener("blur", () => {
                let val = Number(input.value);
                input.value = isNaN(val) || val < 1 ? 1 : val;
            });
        });
    </script>
}

